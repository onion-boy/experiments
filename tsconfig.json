{
    "compilerOptions": {
        "outDir": "./public",
        "rootDir": "./src",
        "allowJs": true,
        "module": "ES6",
        "target": "ES5",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}